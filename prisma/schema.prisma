// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Course {
  id          String   @id @default(cuid())
  title       String
  description String
  modality    String
  duration    String
  startDate   String
  endDate     String
  formUrl     String
  qrCode      String
  createdAt   DateTime @default(now())
}

model Master {
  id          String   @id @default(cuid())
  title       String
  description String
  modality    String
  duration    String
  startDate   String
  endDate     String
  formUrl     String
  qrCode      String
  createdAt   DateTime @default(now())
}

model News {
  id          String   @id @default(cuid())
  title       String
  content     String
  image       String?  // base64 o URL
  publishDate String
  endDate     String?  // Fecha de fin para ocultar la noticia (opcional)
  createdAt   DateTime @default(now())
}
